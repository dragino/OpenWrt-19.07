+        struct m25p *flash = spi_get_drvdata(spi);
+
+        if ((&flash->spi_nor)->addr_width > 3) {
+                printk(KERN_INFO "m25p80: exit 4-byte address mode\n");
+                flash->command[0] = SPINOR_OP_EX4B;  // exit 4-byte address mode: 0xe9
